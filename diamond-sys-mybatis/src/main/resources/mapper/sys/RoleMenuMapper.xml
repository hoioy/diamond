<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoioy.diamond.sys.mapper.RoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="RoleMenu">
        <id column="menu_id" property="menuId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        menu_id, role_id
    </sql>
    <select id="findRoleIdsByMenuIds" resultType="java.lang.String">
        select
        role_id
        from
        role_menu
        where menu_id in
        <foreach collection="menuIds" item="menuId" index="index" open="(" close=")" separator=",">
            #{menuId}
        </foreach>
    </select>
    <select id="findMenuIdsByRoleIds" resultType="java.lang.String">
        select
        menu_id
        from
        role_menu
        where role_id in
        <foreach collection="roleIds" item="roleId" index="index" open="(" close=")" separator=",">
            #{roleId}
        </foreach>
    </select>

</mapper>
