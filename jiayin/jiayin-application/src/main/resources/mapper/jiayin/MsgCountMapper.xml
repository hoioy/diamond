<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoioy.jiayin.mapper.MsgCountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hoioy.jiayin.domain.MsgCount">
    <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="number" property="number" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        user_id, number
    </sql>

    <select id="selectPage" resultType="com.hoioy.jiayin.domain.MsgCount">
        select
           <include refid="Base_Column_List" />
        from
           jiayin_msg_count
        where
           flag=1
        <if test="msgCount.userId != null and msgCount.userId != ''">
            AND user_id = #{msgCount.userId}
        </if>
        <if test="msgCount.number != null and msgCount.number != ''">
            AND number = #{msgCount.number}
        </if>
    </select>
</mapper>
