<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoioy.diamond.jiayin.mapper.MsgCollectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hoioy.diamond.jiayin.domain.MsgCollect">
    <result column="id" property="id" />
        <result column="msg_id" property="msgId" />
        <result column="user_id" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        msg_id, user_id
    </sql>

    <select id="selectPage" resultType="com.hoioy.diamond.jiayin.domain.MsgCollect">
        select
           <include refid="Base_Column_List" />
        from
           jiayin_msg_collect
        where
           flag=1
        <if test="msgCollect.msgId != null and msgCollect.msgId != ''">
            AND msg_id = #{msgCollect.msgId}
        </if>
        <if test="msgCollect.userId != null and msgCollect.userId != ''">
            AND user_id = #{msgCollect.userId}
        </if>
    </select>
</mapper>
