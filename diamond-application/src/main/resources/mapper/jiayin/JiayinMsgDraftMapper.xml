<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoioy.diamond.jiayin.mapper.JiayinMsgDraftMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hoioy.diamond.jiayin.domain.JiayinMsgDraft">
    <result column="id" property="id" />
        <result column="title" property="title" />
        <result column="msg_type" property="msgType" />
        <result column="content" property="content" />
        <result column="views" property="views" />
        <result column="status" property="status" />
        <result column="contacts" property="contacts" />
        <result column="contact_phone" property="contactPhone" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        title, msg_type, content, views, status, contacts, contact_phone
    </sql>

    <select id="selectPage" resultType="com.hoioy.diamond.jiayin.domain.JiayinMsgDraft">
        select
           <include refid="Base_Column_List" />
        from
           jiayin_msg_draft
        where
           flag=1
        <if test="jiayinMsgDraft.title != null and jiayinMsgDraft.title != ''">
            AND title = #{jiayinMsgDraft.title}
        </if>
        <if test="jiayinMsgDraft.msgType != null and jiayinMsgDraft.msgType != ''">
            AND msg_type = #{jiayinMsgDraft.msgType}
        </if>
        <if test="jiayinMsgDraft.content != null and jiayinMsgDraft.content != ''">
            AND content = #{jiayinMsgDraft.content}
        </if>
        <if test="jiayinMsgDraft.views != null and jiayinMsgDraft.views != ''">
            AND views = #{jiayinMsgDraft.views}
        </if>
        <if test="jiayinMsgDraft.status != null and jiayinMsgDraft.status != ''">
            AND status = #{jiayinMsgDraft.status}
        </if>
        <if test="jiayinMsgDraft.contacts != null and jiayinMsgDraft.contacts != ''">
            AND contacts = #{jiayinMsgDraft.contacts}
        </if>
        <if test="jiayinMsgDraft.contactPhone != null and jiayinMsgDraft.contactPhone != ''">
            AND contact_phone = #{jiayinMsgDraft.contactPhone}
        </if>
    </select>
</mapper>
